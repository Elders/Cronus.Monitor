{
    "Serilog": {
        "MinimumLevel": {
            // Verbose | Debug | Information | Warning | Error | Fatal
            "Default": "Debug",
            "Override": {
                "Elders": "Debug",
                "Microsoft": "Information",
                "Microsoft.AspNetCore": "Warning",
                "System": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "theme": "Log.EldersThemes::Epic, Log"
                }
            }
        ],
        "Enrich": [ "FromLogContext" ]
    }
}
